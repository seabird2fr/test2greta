{% extends 'admin/base.html.twig' %}

{% block title %}Connexion{% endblock %}

	{% block body %}

		<h1>Connexion Ã  l'Administration du site</h1>



		<div class="container">

		{% if (errorLogin) %}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<strong>Mauvais identifiant ou mot de passe</strong> 
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		{% endif %}

			<form action=""  method="post">
				<div class="form-group">
					<input type="email" class="form-control" placeholder="Adresse Email" required name="_username">
				</div>

				<div class="form-group">
					<input type="password" class="form-control" placeholder="Password" required name="_password">
				</div>

				<button type="submit" class="btn btn-primary">Connexion</button>
			</form>

		</div>



	{% endblock %}